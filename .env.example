# This file is an example environment config.
# Copy it to `.env` and fill in your secrets for local development.
# Do NOT commit your actual `.env` to version control!

# General app config
TZ=UTC
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=
NODE_ENV=production
SESSION_DRIVER=cookie

# PostgreSQL (use DATABASE_URL for deployment, individual vars for dev)
DB_CONNECTION=pg
DATABASE_URL=

# Optional: only for local development
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# SMTP (e.g., Gmail SMTP)
SMTP_HOST=
SMTP_PORT=